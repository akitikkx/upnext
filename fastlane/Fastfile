default_platform(:android)

platform :android do
  desc "Deploy a new version to the Google Play Internal Track"
  lane :deploy_internal do
    # 1. Increment Version Code in version.properties
    increment_version_properties

    # 2. Build Release Bundle
    gradle(task: "bundleRelease")

    # 3. Upload to Play Store
    upload_to_play_store(
      track: "internal",
      aab: "../app/build/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
    
    # 4. Git Commit Verification (Optional, if you want the version bump back in repo)
    # git_commit(path: ["version.properties"], message: "Bump version code")
    # push_to_git_remote
  end

  private_lane :increment_version_properties do
    path = File.expand_path("../version.properties")
    if File.exist?(path)
      content = File.read(path)
      new_content = content.gsub(/VERSION_CODE=(\d+)/) do |match|
        "VERSION_CODE=#{Regexp.last_match(1).to_i + 1}"
      end
      File.write(path, new_content)
      puts "Bumped VERSION_CODE in version.properties"
    else
      UI.error("version.properties not found at #{path}")
    end
  end
end
