<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="show"
            type="com.theupnextapp.domain.TraktCollectionArg" />

        <variable
            name="showSeason"
            type="com.theupnextapp.domain.TraktCollectionSeason" />

        <variable
            name="listener"
            type="com.theupnextapp.ui.collectionSeasons.CollectionSeasonsAdapter.CollectionSeasonsAdapterListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="?attr/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{(view) -> listener.onCollectionSeasonClick(view, showSeason)}"
        android:padding="@dimen/padding_standard">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:layout_marginEnd="@dimen/margin_horizontal_double"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/collection_delete_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceBody2"
                app:seasonAndNumber="@{showSeason.seasonNumber}"
                tools:text="Season Number" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/collection_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:clickable="true"
            android:contentDescription="@string/show_detail_remove_from_watchlist_button_description"
            android:focusable="true"
            android:onClick="@{(view) -> listener.onCollectionSeasonRemoveClick(view, showSeason)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>