<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_shows_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_half"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginEnd="@dimen/margin_horizontal_half"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            tools:listitem="@layout/recommended_show_list_item" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommended_shows_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_half"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginEnd="@dimen/margin_horizontal_half"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            tools:listitem="@layout/recommended_show_list_item" />

    </LinearLayout>

</layout>