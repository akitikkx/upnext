<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.theupnextapp.ui.library.LibraryViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/library_list_trakt_logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal"
                android:contentDescription="@string/trakt_logo_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_trakt_wide_red_white" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/library_list_trakt_connection_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginEnd="@dimen/margin_horizontal"
                android:gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/library_list_trakt_logo"
                app:traktConnectionStatus="@{viewModel.isAuthorizedOnTrakt}"
                tools:text="Trakt status: Connected" />

            <Button
                android:id="@+id/library_disconnect_trakt_button"
                style="?materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal"
                android:clickable="true"
                android:enabled="@{viewModel.isAuthorizedOnTrakt}"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:onClick="@{() -> viewModel.onDisconnectClick()}"
                android:paddingStart="@dimen/padding_standard_double"
                android:paddingTop="@dimen/padding_standard"
                android:paddingEnd="@dimen/padding_standard_double"
                android:paddingBottom="@dimen/padding_standard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/library_list_trakt_connection_status"
                app:showHideView="@{viewModel.isAuthorizedOnTrakt}"
                app:traktDynamicText="@{viewModel.isAuthorizedOnTrakt}"
                tools:text="@string/trakt_button_text_not_connected" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/library_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_half"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_half"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/library_disconnect_trakt_button"
                app:loadingVisibility="@{viewModel.isLoading}"
                tools:listitem="@layout/library_list_item"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>