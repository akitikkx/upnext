<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="show"
            type="com.theupnextapp.domain.TraktMostAnticipated" />

        <variable
            name="listener"
            type="com.theupnextapp.ui.explore.MostAnticipatedShowsAdapter.MostAnticipatedShowsAdapterListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/most_anticipated_shows_poster"
            android:layout_width="@dimen/poster_frame_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:showHideStringContent="@{show.originalImageUrl}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/shows_list_poster_height"
                android:layout_marginEnd="@dimen/margin_horizontal_half"
                android:clickable="true"
                android:contentDescription="@{String.format(@string/show_poster, show.title)}"
                android:focusable="true"
                android:onClick="@{(view) -> listener.onMostAnticipatedShowClick(view, show)}"
                android:scaleType="centerCrop"
                app:imageUrl="@{show.originalImageUrl}" />
        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_maze_creative_commons_attribution_text_single"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintEnd_toEndOf="@id/most_anticipated_shows_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/most_anticipated_shows_poster" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
