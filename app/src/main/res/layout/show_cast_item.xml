<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cast"
            type="com.theupnextapp.domain.ShowCast" />

        <variable
            name="listener"
            type="com.theupnextapp.ui.showDetail.ShowCastAdapter.ShowCastAdapterListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_horizontal">

        <FrameLayout
            android:id="@+id/dashboard_poster"
            android:layout_width="@dimen/poster_frame_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/poster_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:goneIfNotNull="@{cast.originalImageUrl}" />

            <ImageView
                android:id="@+id/today_show_poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shows_list_poster_height"
                android:layout_marginEnd="@dimen/margin_horizontal_half"
                android:clickable="true"
                android:contentDescription="@{String.format(@string/show_poster, cast.name)}"
                android:focusable="true"
                android:onClick="@{(view) -> listener.onShowCastClick(view, cast)}"
                android:scaleType="centerCrop"
                app:imageUrl="@{cast.originalImageUrl}" />
        </FrameLayout>

        <TextView
            android:id="@+id/cast_name"
            style="@style/Upnext.Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@{cast.name}"
            app:layout_constraintEnd_toEndOf="@id/dashboard_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dashboard_poster"
            tools:text="Cast Name" />

        <TextView
            android:id="@+id/cast_character_name"
            style="@style/Upnext.Caption.Grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@{cast.characterName}"
            app:layout_constraintEnd_toEndOf="@id/cast_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cast_name"
            tools:text="Cast Character name" />

        <TextView
            style="@style/Description6.Grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/tv_maze_creative_commons_attribution_text_single"
            app:layout_constraintEnd_toEndOf="@id/cast_character_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cast_character_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>