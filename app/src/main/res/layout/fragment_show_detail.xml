<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.theupnextapp.ui.showDetail.ShowDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_vertical">

            <ProgressBar
                style="?attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/holo_red_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showProgress="@{viewModel.isLoading}" />

            <FrameLayout
                android:id="@+id/show_detail_backdrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:id="@+id/poster_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:showHideStringContent="@{viewModel.showInfo.originalImageUrl}" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_backdrop_height"
                    android:contentDescription="@{String.format(@string/show_backdrop_image, viewModel.showInfo.name)}"
                    android:scaleType="matrix"
                    android:src="@color/grey_light"
                    app:imageUrl="@{viewModel.showDetailArg.showImageUrl}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_backdrop_bottom" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_view_show_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:text="@{viewModel.showDetailArg.showTitle}"
                android:textAppearance="?attr/textAppearanceHeadline4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/show_detail_poster"
                app:layout_constraintTop_toBottomOf="@id/show_detail_backdrop"
                tools:text="Show Title" />

            <TextView
                android:id="@+id/text_view_show_detail_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_quarter"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:text="@{viewModel.showInfo.status}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_show_detail_title"
                tools:text="Status" />

            <FrameLayout
                android:id="@+id/show_detail_poster"
                android:layout_width="0dp"
                android:layout_height="@dimen/shows_list_poster_height"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_show_detail_status">

                <ProgressBar
                    android:id="@+id/show_detail_poster_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:showHideStringContent="@{viewModel.showInfo.originalImageUrl}" />

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="@dimen/poster_frame_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_horizontal_half"
                    android:contentDescription="@{String.format(@string/show_poster, viewModel.showInfo.name)}"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{viewModel.showDetailArg.showImageUrl}" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/show_detail_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/show_detail_poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/show_detail_poster"
                app:layout_constraintTop_toTopOf="@id/show_detail_poster">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.showInfo.airDays}"
                    android:textAppearance="?attr/textAppearanceBody1"
                    tools:text="Air days" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.showInfo.genres}"
                    android:textAppearance="?attr/textAppearanceBody2"
                    tools:text="Genres" />

                <TextView
                    android:id="@+id/text_view_images_attribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:text="@string/tv_maze_creative_commons_attribution_text_multiple"
                    android:textAppearance="?attr/textAppearanceCaption" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginEnd="@dimen/margin_horizontal"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:clickable="true"
                    android:enabled="@{!viewModel.isLoading}"
                    android:focusable="true"
                    android:onClick="@{() -> viewModel.onConnectClick()}"
                    android:paddingStart="@dimen/padding_standard_double"
                    android:paddingTop="@dimen/padding_standard"
                    android:paddingEnd="@dimen/padding_standard_double"
                    android:paddingBottom="@dimen/padding_standard"
                    app:dynamicText="@{viewModel.isAuthorizedOnTrakt}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connection_description"
                    app:showHideView="@{!viewModel.isAuthorizedOnTrakt}"
                    tools:text="@string/trakt_button_text_not_connected"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/add_to_watchlist_button"
                    style="?materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginEnd="@dimen/margin_horizontal"
                    android:clickable="true"
                    android:enabled="@{!viewModel.isLoading}"
                    android:focusable="true"
                    android:onClick="@{() -> viewModel.onAddToWatchlistClick()}"
                    android:text="@string/show_detail_add_to_watchlist_button"
                    app:showHideView="@{viewModel.notOnWatchlist}"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/remove_from_watchlist_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginEnd="@dimen/margin_horizontal"
                    android:clickable="true"
                    android:enabled="@{!viewModel.isLoading}"
                    android:focusable="true"
                    android:onClick="@{() -> viewModel.onRemoveFromWatchlistClick()}"
                    android:text="@string/show_detail_remove_from_watchlist_button"
                    app:showHideView="@{viewModel.onWatchlist}"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trakt_show_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_summary">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/show_detail_watchers_heading"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textStyle="bold"
                        app:showHideIntContent="@{viewModel.showStats.watchers}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@{String.valueOf(viewModel.showStats.watchers)}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:showHideIntContent="@{viewModel.showStats.watchers}"
                        tools:text="10 000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/show_detail_rating_heading"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textStyle="bold"
                        app:showHideIntContent="@{viewModel.showRating.rating}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:showHideIntContent="@{viewModel.showRating.rating}"
                        app:showRating="@{viewModel.showRating.rating}"
                        tools:text="9/10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAppearance="?attr/textAppearanceCaption"
                        app:showHideIntContent="@{viewModel.showRating.votes}"
                        app:showRatingVotes="@{viewModel.showRating.votes}"
                        tools:text="1000 votes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/show_detail_plays_heading"
                        android:textAllCaps="true"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textStyle="bold"
                        app:showHideIntContent="@{viewModel.showStats.plays}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@{String.valueOf(viewModel.showStats.plays)}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        app:showHideIntContent="@{viewModel.showStats.plays}"
                        tools:text="1 400 345" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/show_detail_synopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceBody2"
                app:fromHtml="@{viewModel.showInfo.summary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trakt_show_stats"
                tools:text="Show Summary" />

            <TextView
                android:id="@+id/cast_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:text="@string/show_detail_cast_list"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_synopsis"
                app:loadingVisibility="@{viewModel.isLoading()}"
                app:showHideView="@{!viewModel.showCastEmpty}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cast_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:clipToPadding="false"
                app:canClickItem="@{viewModel.isLoading()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cast_title"
                app:loadingVisibility="@{viewModel.isLoading()}"
                app:showHideView="@{!viewModel.showCastEmpty}"
                tools:listitem="@layout/show_cast_item" />

            <TextView
                android:id="@+id/show_detail_next_episode_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:text="@string/show_detail_next_episode_heading"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cast_list"
                app:showHideStringContent="@{viewModel.showInfo.nextEpisodeSummary}" />

            <TextView
                android:id="@+id/show_detail_next_episode_season_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_next_episode_heading"
                app:nextEpisodeInfo="@{viewModel.showInfo}"
                app:showHideStringContent="@{viewModel.showInfo.nextEpisodeSummary}"
                tools:text="Next Episode Season Info" />

            <TextView
                android:id="@+id/show_detail_next_episode_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceBody2"
                app:fromHtml="@{viewModel.showInfo.nextEpisodeSummary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_next_episode_season_info"
                app:showHideStringContent="@{viewModel.showInfo.nextEpisodeSummary}"
                tools:text="Next Episode Summary" />

            <TextView
                android:id="@+id/show_detail_previous_episode_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:text="@string/show_detail_previous_episode_heading"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_next_episode_summary"
                app:showHideStringContent="@{viewModel.showInfo.previousEpisodeSummary}" />

            <TextView
                android:id="@+id/show_detail_previous_episode_season_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_previous_episode_heading"
                app:previousEpisodeInfo="@{viewModel.showInfo}"
                app:showHideStringContent="@{viewModel.showInfo.previousEpisodeSummary}"
                tools:text="Previous Episode Season Info" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceBody2"
                app:fromHtml="@{viewModel.showInfo.previousEpisodeSummary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_previous_episode_season_info"
                app:showHideStringContent="@{viewModel.showInfo.previousEpisodeSummary}"
                tools:text="Previous Episode Summary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>