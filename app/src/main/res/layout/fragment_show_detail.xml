<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.theupnextapp.ui.showDetail.ShowDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_vertical">

            <ProgressBar
                style="?attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/holo_red_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showProgress="@{viewModel.isLoading}" />

            <FrameLayout
                android:id="@+id/show_detail_backdrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:id="@+id/poster_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:showHideStringContent="@{viewModel.showInfo.originalImageUrl}" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_backdrop_height"
                    android:contentDescription="@{String.format(@string/show_backdrop_image, viewModel.showInfo.name)}"
                    android:scaleType="matrix"
                    android:src="@color/grey_light"
                    app:imageUrl="@{viewModel.showDetailArg.showImageUrl}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_backdrop_bottom" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_view_show_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:text="@{viewModel.showDetailArg.showTitle}"
                android:textAppearance="?attr/textAppearanceHeadline4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/poster_and_detail_layer"
                app:layout_constraintTop_toBottomOf="@id/show_detail_backdrop"
                tools:text="Show Title" />

            <TextView
                android:id="@+id/text_view_show_detail_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_quarter"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:text="@{viewModel.showInfo.status}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_show_detail_title"
                tools:text="Status" />

            <LinearLayout
                android:id="@+id/poster_and_detail_layer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_show_detail_status">

                <FrameLayout
                    android:id="@+id/show_detail_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/shows_list_poster_height"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_show_detail_status">

                    <ProgressBar
                        android:id="@+id/show_detail_poster_progress"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:showHideStringContent="@{viewModel.showInfo.originalImageUrl}" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/poster"
                        android:layout_width="@dimen/poster_frame_width"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margin_horizontal_half"
                        android:contentDescription="@{String.format(@string/show_poster, viewModel.showInfo.name)}"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.showDetailArg.showImageUrl}" />
                </FrameLayout>

                <include
                    layout="@layout/layout_show_detail_summary_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_double"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginEnd="@dimen/margin_horizontal_double"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/show_detail_poster"
                    app:layout_constraintTop_toTopOf="@id/show_detail_poster"
                    app:viewModel="@{viewModel}" />
            </LinearLayout>

            <include
                android:id="@+id/show_detail_trakt_list_buttons"
                layout="@layout/layout_show_detail_trakt_list_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal"
                app:layout_constraintBottom_toTopOf="@id/trakt_show_stats"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poster_and_detail_layer"
                app:loadingVisibility="@{!viewModel.isLoading}"
                app:viewModel="@{viewModel}" />

            <include
                android:id="@+id/trakt_show_stats"
                layout="@layout/layout_show_detail_trakt_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_trakt_list_buttons"
                app:viewModel="@{viewModel}" />

            <TextView
                android:id="@+id/show_detail_synopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceBody2"
                app:fromHtml="@{viewModel.showInfo.summary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trakt_show_stats"
                tools:text="Show Summary" />

            <Button
                android:id="@+id/watched_progress"
                style="?materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:clickable="true"
                android:enabled="@{!viewModel.isLoading}"
                android:focusable="true"
                android:onClick="@{() -> viewModel.onWatchedProgressClick()}"
                android:text="@string/show_detail_get_watched_progress"
                app:layout_constraintEnd_toStartOf="@id/show_seasons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_synopsis"
                app:showHideView="@{viewModel.isAuthorizedOnTrakt}"
                tools:visibility="visible" />

            <Button
                android:id="@+id/show_seasons"
                style="?materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:clickable="true"
                android:enabled="@{!viewModel.isLoading}"
                android:focusable="true"
                android:onClick="@{() -> viewModel.onSeasonsClick()}"
                android:text="@string/show_detail_seasons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/watched_progress"
                app:layout_constraintTop_toBottomOf="@id/show_detail_synopsis"
                app:showHideView="@{viewModel.isAuthorizedOnTrakt}"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cast_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:text="@string/show_detail_cast_list"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/watched_progress"
                app:loadingVisibility="@{viewModel.isLoading()}"
                app:showHideView="@{!viewModel.showCastEmpty}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cast_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:layout_marginBottom="@dimen/margin_vertical"
                android:clipToPadding="false"
                app:canClickItem="@{viewModel.isLoading()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cast_title"
                app:loadingVisibility="@{viewModel.isLoading()}"
                app:showHideView="@{!viewModel.showCastEmpty}"
                tools:listitem="@layout/show_cast_item" />

            <TextView
                android:id="@+id/show_detail_next_episode_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:text="@string/show_detail_next_episode_heading"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cast_list"
                app:showHideStringContent="@{viewModel.showInfo.nextEpisodeSummary}" />

            <TextView
                android:id="@+id/show_detail_next_episode_season_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_next_episode_heading"
                app:nextEpisodeInfo="@{viewModel.showInfo}"
                app:showHideStringContent="@{viewModel.showInfo.nextEpisodeSummary}"
                tools:text="Next Episode Season Info" />

            <TextView
                android:id="@+id/show_detail_next_episode_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceBody2"
                app:fromHtml="@{viewModel.showInfo.nextEpisodeSummary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_next_episode_season_info"
                app:showHideStringContent="@{viewModel.showInfo.nextEpisodeSummary}"
                tools:text="Next Episode Summary" />

            <TextView
                android:id="@+id/show_detail_previous_episode_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:text="@string/show_detail_previous_episode_heading"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_next_episode_summary"
                app:showHideStringContent="@{viewModel.showInfo.previousEpisodeSummary}" />

            <TextView
                android:id="@+id/show_detail_previous_episode_season_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical_half"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_previous_episode_heading"
                app:previousEpisodeInfo="@{viewModel.showInfo}"
                app:showHideStringContent="@{viewModel.showInfo.previousEpisodeSummary}"
                tools:text="Previous Episode Season Info" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_double"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginEnd="@dimen/margin_horizontal_double"
                android:textAppearance="?attr/textAppearanceBody2"
                app:fromHtml="@{viewModel.showInfo.previousEpisodeSummary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/show_detail_previous_episode_season_info"
                app:showHideStringContent="@{viewModel.showInfo.previousEpisodeSummary}"
                tools:text="Previous Episode Summary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>