<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="episode"
            type="com.theupnextapp.domain.ShowSeasonEpisode" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/margin_vertical"
        app:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/season_episode_poster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:id="@+id/season_item_poster_progress"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/season_item_poster"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_season_episode_poster_height"
                    android:contentDescription="@{String.format(@string/show_poster, episode.name)}"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{episode.originalImageUrl}"
                    app:srcCompat="@drawable/loading_list_placeholder" />
            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_season_and_episode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_standard"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                app:episodeNumber="@{episode.number}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/season_episode_poster"
                app:seasonNumber="@{episode.season}"
                tools:text="Season 1, Episode 1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_episode_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_standard"
                android:text="@{episode.name}"
                android:textAllCaps="true"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_season_and_episode"
                tools:text="The episode name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textview_episode_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="6"
                android:padding="@dimen/padding_standard"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                app:fromHtml="@{episode.summary}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_episode_name"
                tools:text="@tools:sample/lorem/random" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>