<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.theupnextapp.ui.traktRecommendations.TraktRecommendationsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recommendations_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/recommendations_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/trakt_watchlist_header_height"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:contentDescription="@string/trakt_logo_description"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recommendations_subtitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loadingVisibility="@{viewModel.isLoadingTraktRecommendations}"
                    app:showHideView="@{!viewModel.traktRecommendationsShowsEmpty}"
                    app:srcCompat="@drawable/ic_trakt_wide_red_white"
                    tools:visibility="visible" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/recommendations_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginEnd="@dimen/margin_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/recommendations_screen_subtitle"
                    android:textAppearance="?attr/textAppearanceCaption"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recommendations_header"
                    app:loadingVisibility="@{viewModel.isLoadingTraktRecommendations}"
                    app:showHideView="@{!viewModel.traktRecommendationsShowsEmpty}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendations_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_half"
                    android:layout_marginTop="@dimen/margin_vertical"
                    android:layout_marginEnd="@dimen/margin_horizontal_half"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    android:clipToPadding="false"
                    android:transitionGroup="true"
                    app:canClickItem="@{viewModel.isLoadingTraktRecommendations}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recommendations_subtitle"
                    app:loadingVisibility="@{viewModel.isLoadingTraktRecommendations}"
                    app:showHideView="@{!viewModel.traktRecommendationsShowsEmpty}"
                    tools:listitem="@layout/trakt_recommendations_list_item"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/recommendations_progress_bar"
            style="?attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showHideView="@{viewModel.isLoadingTraktRecommendations}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>