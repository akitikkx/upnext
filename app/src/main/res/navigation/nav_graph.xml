<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.theupnextapp.ui.splashscreen.SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.theupnextapp.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_showDetailFragment"
            app:destination="@id/showDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/showDetailFragment"
        android:name="com.theupnextapp.ui.showDetail.ShowDetailFragment"
        tools:layout="@layout/fragment_show_detail">
        <argument
            android:name="show"
            app:argType="com.theupnextapp.domain.ShowDetailArg" />
        <action
            android:id="@id/action_dashboardFragment_to_showDetailFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.theupnextapp.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_showDetailFragment"
            app:destination="@id/showDetailFragment"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.theupnextapp.ui.watchlist.WatchlistFragment"
        tools:layout="@layout/fragment_watchlist">
        <argument
            android:name="traktUri"
            android:defaultValue="@null"
            app:argType="com.theupnextapp.domain.TraktConnectionArg"
            app:nullable="true" />
        <action
            android:id="@+id/action_watchlistFragment_to_showDetailFragment"
            app:destination="@id/showDetailFragment" />
        <action
            android:id="@+id/action_watchlistFragment_to_libraryFragment"
            app:destination="@id/libraryFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.theupnextapp.ui.history.HistoryFragment"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_historyFragment_to_showDetailFragment"
            app:destination="@id/showDetailFragment" />
        <action
            android:id="@+id/action_historyFragment_to_libraryFragment"
            app:destination="@id/libraryFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.theupnextapp.ui.settings.SettingsFragment" />

    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.theupnextapp.ui.library.LibraryFragment"
        android:label="@string/title_library"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_libraryFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_watchlistFragment"
            app:destination="@id/watchlistFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_traktRecommendationsFragment"
            app:destination="@id/traktRecommendationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.theupnextapp.ui.explore.ExploreFragment"
        tools:layout="@layout/fragment_explore"
        android:label="@string/title_explore">
        <action
            android:id="@+id/action_exploreFragment_to_showDetailFragment"
            app:destination="@id/showDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/traktRecommendationsFragment"
        android:name="com.theupnextapp.ui.traktRecommendations.TraktRecommendationsFragment"
        android:label="@string/title_recommendations"
        tools:layout="@layout/fragment_trakt_recommendations">
        <action
            android:id="@+id/action_traktRecommendationsFragment_to_libraryFragment"
            app:destination="@id/libraryFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_traktRecommendationsFragment_to_showDetailFragment"
            app:destination="@id/showDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

</navigation>